{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "esnext",
		"module": "esnext",
		"jsx": "preserve",
		"lib": ["dom", "es2017"],
		"baseUrl": ".",
		"moduleResolution": "node",
		"strict": false,
		"allowJs": true,
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"isolatedModules": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"paths": {
			"~/src/*": ["./src/*"],
			"~/gen/*": ["./src/generated/*"],
			"~/gql/*": ["./src/graphql/*"],
			"~/views/*": ["./src/views/*"],
			"~/components/*": ["./src/components/*"],
			"~/containers/*": ["./src/containers/*"],
			"~/utils/*": ["./src/utils/*"],
			"~/public/*": ["./public/*"],
			"~/stores/*": ["./src/stores/*"],
			"~/types/*": ["./src/@types/*"],
			"~/styles/*": ["./src/styles/*"]
		}
	},
	"exclude": [
		"dist",
		".next",
		"out",
		"build",
		"next.config.js",
		"node_modules",
		"envConfig",
		"generated",
		"graphql"
	],
	"include": ["**/*.ts", "**/*.tsx"]
}
